<%@state_city = get_state_and_city_from_zipcode(board.zipcode)%>
<%@weather = get_weather_from_lat_long(board.latitude, board.longitude)%>

<!-- http://stackoverflow.com/questions/492951/how-can-i-get-state-and-city-information-from-a-us-zip-code-through-an-online-we -->
<div class="media" style="border:2px solid; border-color:#E8E8E8; border-radius:5px; padding:7px;">
  <a class="pull-left">
    <%= image_tag("weather.png", :class => "media-object", :style => "width: 64px; height: 64px;", :title => "Waterall", :alt => "Waterall") %>
  </a>
  <div class="media-body">
    <h4 class="media-heading"><span class="label label-warning"><%=@weather['currently']['summary']%></span> <%=@state_city['city'].capitalize%>, <%=@state_city['state']%></h4>
    <p>Chance of rain <span class="label label-info"><%=@weather['currently']['precipProbability']%>%</span></p>
    <p>Humidity <span class="label label-info"><%=@weather['currently']['humidity'] * 100%>%</span></p>
    <p>Cloud Cover <span class="label label-info"><%=@weather['currently']['cloudCover'] * 100%>%</span></p>
    <p>Wind Speed <span class="label label-info"><%=@weather['currently']['cloudCover'] * 100%>%</span></p>    
        
  </div>
</div>

